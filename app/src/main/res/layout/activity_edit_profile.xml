<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mm.smartschool.EditProfileActivity">

    <ImageView
        android:id="@+id/edit_profileImage"
        android:layout_width="155dp"
        android:layout_height="97dp"
        app:srcCompat="@drawable/school"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/school"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />


    <EditText
        android:id="@+id/profile_name"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Edit profile name"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="19dp"
        android:background="@drawable/bottom_border"
        android:textColor="@color/colorBlack"
        tools:layout_editor_absoluteY="104dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/student_class"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Edit Student Class"
        android:inputType="text"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="19dp"
        android:background="@drawable/bottom_border"
        android:textColor="@color/colorBlack"
        android:singleLine="true"
        tools:layout_editor_absoluteY="171dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/student_phone"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Edit_phone Number"
        android:inputType="phone"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="19dp"
        android:background="@drawable/bottom_border"
        android:textColor="@color/colorBlack"
        android:singleLine="true"
        tools:layout_editor_absoluteY="232dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/edit_e_mail"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:background="@drawable/bottom_border"
        android:inputType="textEmailAddress"
        android:hint="Edit E_mail"
        android:maxLines="1"
        android:padding="12dp"
        android:singleLine="true"
        android:textColor="@color/colorBlack"
        android:textSize="19dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="295dp" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Edit Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="19dp"
        android:background="@drawable/bottom_border"
        android:textColor="@color/colorBlack"
        android:singleLine="true"
        tools:layout_editor_absoluteY="358dp"
        tools:layout_editor_absoluteX="8dp" />

    <LinearLayout
        android:id="@+id/select_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

    </LinearLayout>

    <Button
        android:id="@+id/save_edit_button"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="save_edit"
        android:background="@color/colorPrimaryDark"
        android:padding="12dp"
        tools:layout_editor_absoluteY="447dp"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/profile_date_update_button"
        android:layout_width="131dp"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:background="@color/colorPrimaryDark"
        android:text="select_date"
        android:textColor="@color/colorWhite"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="445dp" />




</android.support.constraint.ConstraintLayout>
